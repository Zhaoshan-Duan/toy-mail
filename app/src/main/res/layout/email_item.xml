<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/senderIv"
        android:layout_width="33dp"
        android:layout_height="31dp"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/titleTv"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/senderTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/senderIv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bobo" />

    <TextView
        android:id="@+id/dateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/titleTv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="11.22.3342" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        tools:text="Re: Re: Update on Ticket #131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senderTv"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/summaryTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        tools:text="Prioritize this. Thanks! \n - Mono"
        app:layout_constraintStart_toStartOf="parent"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>